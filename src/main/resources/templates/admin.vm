<html>
<head>
    <title>$i18n.getText("mattermost.admin.label")</title>
    <meta name="decorator" content="atl.admin" />
    $webResourceManager.requireResource("com.atlassian.auiplugin:ajs")
</head>
<body>
<form id="admin" class="aui" method="POST" action="configurePlugin.action">
    <div class="field-group">
        <label for="webhookURL">$i18n.getText("mattermost.admin.webhookurl.label")<span class="aui-icon icon-required"></span><span class="content"> required</span></label>
        <input type="text" id="webhookURL" name="webhookURL" class="text" value="$!webhookURL">
    </div>
    <div class="buttons-container">
        <div class="buttons">
            <button class="button submit" type="submit">$i18n.getText("mattermost.admin.save.label")</button>
        </div>
    </div>
</form>
</body>
</html>
